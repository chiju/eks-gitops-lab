{
  "id": null,
  "title": "AWS EKS Cost Monitoring",
  "tags": ["aws", "eks", "cost", "resources"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "5m",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "EKS Cluster Info",
      "type": "table",
      "targets": [
        {
          "datasource": "CloudWatch",
          "namespace": "AWS/EKS",
          "metricName": "cluster_failed_request_count",
          "dimensions": {
            "ClusterName": "eks-lab-argocd"
          },
          "statistic": "Sum",
          "period": "300"
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "EC2 Instance Count (EKS Nodes)",
      "type": "stat",
      "targets": [
        {
          "datasource": "CloudWatch",
          "namespace": "AWS/EC2",
          "metricName": "StatusCheckFailed",
          "statistic": "SampleCount",
          "period": "300"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Estimated Monthly Cost",
      "type": "stat",
      "targets": [],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "currencyUSD"
        }
      },
      "options": {
        "textMode": "value_and_name",
        "colorMode": "background"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 4,
      "title": "EKS Node CPU Utilization",
      "type": "timeseries",
      "targets": [
        {
          "datasource": "CloudWatch",
          "namespace": "AWS/EC2",
          "metricName": "CPUUtilization",
          "statistic": "Average",
          "period": "300"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
    },
    {
      "id": 5,
      "title": "EKS Node Network In/Out",
      "type": "timeseries",
      "targets": [
        {
          "datasource": "CloudWatch",
          "namespace": "AWS/EC2",
          "metricName": "NetworkIn",
          "statistic": "Sum",
          "period": "300"
        },
        {
          "datasource": "CloudWatch",
          "namespace": "AWS/EC2",
          "metricName": "NetworkOut",
          "statistic": "Sum",
          "period": "300"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "bytes"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
    },
    {
      "id": 6,
      "title": "Cost Breakdown (Estimated)",
      "type": "piechart",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "currencyUSD"
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "pie"
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14}
    }
  ]
}
